<h1>Let's create this email!</h1>
<%= form_for @email, :url => url_for(:controller => 'send_emails', :action => 'send_email') do |f| %>
   <div class="container">
      <div class="row">
         <div class="col-xs-4">Email Adresses</div>
         <div class="col-xs-4"><%= f.text_area :email_addresses, size: "60x20"  %></div>
      </div>
      <div class="row">
         <div class="col-xs-4">Link</div>
         <div class="col-xs-4"><%= f.text_field :link %></div>
      </div>
      <div class="row">
         <div class="col-xs-4">Song</div>
         <div class="col-xs-4"><%= f.text_field :song %></div>
      </div>
      <div class="row">
         <div class="col-xs-4">Band</div>
         <div class="col-xs-4"><%= f.text_field :band %></div>
      </div>
      <div class="row">
         <div class="col-xs-4">Curator</div>
         <div class="col-xs-4"><%= f.text_field :curator %></div>
      </div>
      <div class="row">
         <div class="col-xs-4">Click to Tweet Link</div>
         <div class="col-xs-4"><%= f.text_field :click_to_tweet %></div>
      </div>
      <div class="row">
         <div class="col-xs-4">Personal Message</div>
         <div class="col-xs-4"><%= f.text_area :message, size: "60x20"  %></div>
      </div>

      <div class="row">
         <div class="col-xs-4"><%= f.submit "Send!" %></div>
      </div>
   </div>
<% end %>
